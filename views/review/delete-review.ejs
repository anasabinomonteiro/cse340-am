<% - include('../partials/head') %>

<div class="delete-review-form">
  <h1>Delete Review</h1>

  <!-- Flash message -->
   <% if (messages && Object.keys(messages).length > 0) { %>
   <% for (const type in messages) { %>
   <% messages[type].forEach(function(msg) { %>
    <p class="flash-message <%= type %>"><%= msg %></p>
    <% }) %>
    <% } %>
    <% } %>

    <p>Are you sure you want to delete this review? Deletion cannot be undone!!</p>

    <blockquote>
      <%= review.review_text %>
    </blockquote>

    <!-- Form -->
     <form action="/review/delete-review/<%= review.review_id %>" method="POST">
      <input type="hidden" name="inv_id" value="<%= review.inv_id %>">  
      <button type="submit" class="delete-button">Confirm Delete</button>
     </form>
     
     <div class="cancel-link">
      <a href="/account">Cancel</a>
    </div>
  </div>
<h1><%= title  %></h1>

<!-- Flash message -->
<% if (messages && Object.keys(messages).length > 0) { %>
  <% for (const type in messages) { %>
    <% messages[type].forEach(function(msg) { %>
      <p class="flash-message <%= type %>"><%= msg %></p>
    <% }) %>
  <% } %>
<% } %>

<h2>Welcome <%= accountData.account_firstname %></h2>
<p>You are logged in.</p>

<div class="account-container">
  <div>
<!-- Update Account Form -->
 <h2>Account Update</h2>
<form action="/account/update" method="post" id="accountUpdate" class="account-update">
    <label for="account_firstname">First Name</label>
    <input
      type="text"
      name="account_firstname"
      id="account_firstname"
      required
      value="<%= locals.account_firstname %>"
      placeholder="Enter your first name">

      <label for="account_lastname">Last Name</label>
    <input  
      type="text"
      name="account_lastname"
      id="account_lastname"
      required
      value="<%= locals.account_lastname %>"
      placeholder="Enter your last name">

    <label for="account_email">Email</label>
    <input
      type="email"
      name="account_email"
      id="account_email"
      required
      value="<%= locals.account_email %>"
      placeholder="Enter your email address">

    <!-- Hidden id to know which client to update -->
    <input
      type="hidden"
      name="account_id"
      id="account_id"
      value="<%= accountData.account_id %>">

    <button type="submit">Update Account</button> 
</form>
  </div>

  <div>
<!-- Change Password Form -->
<h2>Change Password</h2>
<form action="/account/update-password" method="post" id="accountUpdatePassword" class="account-update-password">
    <label for="account_password">New Password</label>
    <input
      type="password"
      name="account_password"
      id="account_password"
      required
      pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
      placeholder="Enter your new password">
      <p>Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</p>

      <!-- Hidden id to know which client to update -->
      <input
      type="hidden"
      name="account_id"
      id="account_idp"
      value="<%= accountData.account_id %>">  

    <button type="submit">Change Password</button>
</form>
  </div>
</div>
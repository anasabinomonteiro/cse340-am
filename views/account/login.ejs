<h1><%= title %></h1>

<!-- Flash message -->
<% if (messages && Object.keys(messages).length > 0) { %> <% for (const type in
messages) { %> <% messages[type].forEach(function(msg) { %>
<p class="flash-message <%= type %>"><%= msg %></p>
<% }) %> <% } %> <% } %>

<form action="/account/login" method="POST" class="login-form">
  <label for="email">Email:</label>
  <input
    type="email"
    name="account_email"
    id="email"
    required
    placeholder="Enter your email address"
  />
  <label for="password">Password:</label>
  <input
    type="password"
    name="account_password"
    id="password"
    required
    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    placeholder="Enter your password"
  />
  <span
    >Passwords must be at least 12 characters and contain at least 1 number, 1
    capital letter and 1 special character.</span>
  <button type="submit">Login</button>
</form>

<p>No account? <a href="/account/register">Register</a></p>
